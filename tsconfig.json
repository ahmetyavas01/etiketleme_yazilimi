{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "main.js",
    "preload.js",
    "launcher.js",
    "build-*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-electron",
    "backend/node_modules",
    "**/*.test.js",
    "**/*.spec.js"
  ]
}
